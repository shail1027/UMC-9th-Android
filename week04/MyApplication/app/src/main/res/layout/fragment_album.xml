<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/song_locker_arrow_img_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_arrow_more"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:rotation="180"
        app:tint="@color/black"
        />

    <ImageView
        android:id="@+id/song_locker_like"
        android:src="@drawable/ic_my_like_off"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toStartOf="@id/song_locker_more_img_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/song_locker_more_img_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/song_locker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Song"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/song_locker_title_img_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="37dp"/>

    <TextView
        android:id="@+id/song_locker_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenshi Yonezu"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/lightgray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/song_locker_title_img_iv"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/song_locker_information"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginBottom="0dp"
        android:text="앨범정보"
        android:textColor="@color/lightgray"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/song_locker_title_img_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/song_locker_title_img_iv"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/img_album_exp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/song_locker_title_img_iv"
        app:layout_constraintStart_toStartOf="@id/song_locker_title_img_iv"
        app:layout_constraintTop_toBottomOf="@id/song_locker_title_img_iv" />

        <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album_content_tb"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/album_song_rv"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/space_for_bottom_bars"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@id/album_content_tb"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>