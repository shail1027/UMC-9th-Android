<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/home_mini_player_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/home_mini_player_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_navigation">

        <TextView
            android:id="@+id/home_mini_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pop Song"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/home_mini_player_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kenshi Yonezu"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_mini_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_navigation"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp">


        <ImageView
            android:id="@+id/home_mini_player_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_previous"/>

        <ImageView
            android:id="@+id/home_mini_player_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_play"/>

        <ImageView
            android:id="@+id/home_mini_player_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_next"/>

        <ImageView
            android:id="@+id/home_mini_player_go_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_miniplayer_go_list"/>

    </LinearLayout>

    <include
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>