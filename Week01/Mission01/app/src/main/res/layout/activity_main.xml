<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정우표를 선택해주세요"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/emotionList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/emotionHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/imgHappy"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/happy"
                android:contentDescription="행복" />

            <TextView
                android:id="@+id/tvHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더없이 행복한 하루였어요"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emotionExcited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/imgExcited"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/excite"
                android:contentDescription="흥분" />

            <TextView
                android:id="@+id/tvExcited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="들뜨고 흥분돼요"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emotionNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/imgNormal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/normal"
                android:contentDescription="평범" />

            <TextView
                android:id="@+id/tvNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평범한 하루였어요"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emotionAnxious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/imgAnxious"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/unrest"
                android:contentDescription="불안" />

            <TextView
                android:id="@+id/tvAnxious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생각이 많아지고 불안해요"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emotionAngry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/imgAngry"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/angry"
                android:contentDescription="화남" />

            <TextView
                android:id="@+id/tvAngry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부글부글 화가 나요"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
